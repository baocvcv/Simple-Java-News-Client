<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:id="@+id/scholar_brief_layout"
    android:layout_margin="6dp"
    android:orientation="horizontal"
    android:padding="2dp">

    <ImageView
        android:id="@+id/scholar_avatar"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_margin="3dp"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:paddingHorizontal="4dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/scholar_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="1dp"
            android:text="TextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/scholar_indices"
            android:layout_width="match_parent"
            android:layout_marginVertical="1dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:paddingHorizontal="1dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#FFE9E9"
                    android:text="H-index"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/scholar_hindex"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#EDEDED"
                    android:text="1"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:paddingHorizontal="1dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#FAE4C9"
                    android:text="Cited"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/scholar_citation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="#EDEDED"
                    android:layout_weight="1"
                    android:text="1"
                    android:textAlignment="center" />
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_margin="1dp"
                android:paddingHorizontal="1dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#BECFE6C1"
                    android:text="A"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/scholar_activity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="#EDEDED"
                    android:text="1"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:paddingHorizontal="1dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#C7EDE2"
                    android:text="S"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/scholar_social"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="#EDEDED"
                    android:text="1"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_margin="1dp"
                android:paddingHorizontal="1dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#C1C0EF"
                    android:text="P"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/scholar_publication"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="#EDEDED"
                    android:layout_weight="2"
                    android:text="1"
                    android:textAlignment="center" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView23"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#CFEAFF"
                android:text="职务"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/scholar_position"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="1dp"
                android:layout_weight="9"
                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView25"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#CFEAFF"
                android:text="单位"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/scholar_affiliation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="1dp"
                android:layout_weight="9"
                android:text="TextView" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>